<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Portal</title>
    <link href="/assets/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="/assets/node_modules/now-ui-kit/assets/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="/assets/css/now-ui-kit.css" rel="stylesheet"/>
    <style>
     .navbar .navbar-toggler-bar {
      background: #2362af;
     }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-white">
      <div class="container">
        <div class="navbar-translate">
          <a class="navbar-brand text-primary" href="#pablo">
            Demo
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
   	    <span class="navbar-toggler-bar bar1"></span>
	    <span class="navbar-toggler-bar bar2"></span>
	    <span class="navbar-toggler-bar bar3"></span>
 	  </button>
        </div>

        <div class="collapse navbar-collapse justify-content-end" id="navigation">
    	  <ul class="navbar-nav">
            <li class="nav-item">
	      <a class="nav-link" href="/add">
		New entry
	      </a>
            </li>
	  </ul>
        </div>
      </div>
    </nav>
    <div class="wrapper">
      <div class="container">
	<div class="row">
	  <div class="col-md-10 col-sm-12 offset-md-1">
	    <h4>Licenses under <strong>{{ .category }}</strong></h4>
	    <div class="row">
	      <div class="col-md-12">
		{{ if .error }}
		  <div class="alert alert-danger">
		    {{ .error }}
		  </div>
		{{ end }}
	      </div>
	    </div>
	    <div class="table-responsive">
	      <table class="table">
		<thead>
		  <tr>
		    <th>License Number</th>
		    <th>Year</th>
		    <th>Commercial Name of Applicant</th>
		    <th>Business ID</th>
		    <th>Pin No</th>
		    <th>Location</th>
		    <th>Expiry Date</th>
		  </tr>
		</thead>
		<tbody>
		  {{ if .licenses }}
		    {{ range .licenses }}
		      <tr>
			<td>{{ .LicenceNumber }}</td>
			<td>{{ .Year }}</td>
			<td>{{ .ApplicantName }}</td>
			<td>{{ .BusinessID }}</td>
			<td>{{ .PinNo }}</td>
			<td>
			  {{ .Location.Street }}, <br/>
			  {{ .Location.Town }}, <br/>
			  {{ .Location.Box }}, <br/>
			  {{ .Location.Building }}, <br/>
			  {{ .Location.StallNumber }}
			</td>
			<td></td>
		      </tr>
		    {{ end }}
		  {{ end }}
		</tbody>
	      </table>
	    </div>
	  </div>
	</div>
      </div>
    </div>
    
    <script src="/assets/node_modules/now-ui-kit/assets/js/core/jquery.3.2.1.min.js"></script>
    <script src="/assets/node_modules/now-ui-kit/assets/js/core/popper.min.js"></script>
    <script src="/assets/node_modules/now-ui-kit/assets/js/core/bootstrap.min.js"></script>
    <script src="/assets/node_modules/now-ui-kit/assets/js/now-ui-kit.js"></script>
  </body>
</html>
